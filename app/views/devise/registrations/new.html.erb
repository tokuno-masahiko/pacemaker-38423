<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, size: "35", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, size: "35", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, size: "35", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, size: "35", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, size: "35", autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :tel %><br />
    <%= f.telephone_field :tel, size: "35", autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
